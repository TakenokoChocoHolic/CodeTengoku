</TEXTAREA>

<br><br>

<form action="/problems/<%= problem.id %>/run" method="post">
Input:
<br>
<TEXTAREA cols="40" rows="2" wrap="off">
  <%= problem.input %>
</TEXTAREA>
<br><br>

Output:
<br>
<TEXTAREA cols="40" rows="2" wrap="off">
  <%= problem.output %>
</TEXTAREA>

<br><br>

Code:
<br>
<TEXTAREA cols="40" rows="6" wrap="off">
  <%= problem.first_message %>
</TEXTAREA>

<br>

<BUTTON type="submit">RUN</BUTTON>

<br>

</form>
