<% title = 'Hello, world' %>

<h2>Issued Problems</h2>
<ul>
  <% for(var i = 0; i < problems.length; i++) { %>
    <li>
      <%= problems[i].title %>
      <a href='/problems/<%= problems[i].id %>/solve'>solve</a>
      <a href='/problems/<%= problems[i].id %>/edit'>edit</a>
      <a href='/problems/<%= problems[i].id %>/delete'>delete</a>
  <% } %>
</ul>

<h2>Issue New Problem</h2>
<form action="problems/new" method="post">
  title:<br><input name=title><br>
  description:<br><textarea name=description></textarea><br>
  input:<br><textarea name=input></textarea><br>
  output:<br><textarea name=output></textarea><br>
  <button type="submit">submit</button>
</form>

